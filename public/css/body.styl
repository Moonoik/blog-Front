#postsWrapper
	height auto
	.postList
		width 75%
		padding 1em
		display inline-block
		text-align left
		.postInfo
			width 26%
			height auto
			border-style solid
			border-width 1px
			border-color #FFF
			padding 1em
			margin 1em
			display inline-block
			vertical-align top
			position relative
			-webkit-animation-name fadeIn
			-webkit-animation-duration 2s
			animation-name fadeIn
			animation-duration 2s
			img, .overlay
				transition .3s all
			.overlay
				position absolute
				top 0
				left 0
				bottom 0
				width 100%
				background rgba(0, 0, 0, 0.2)
				color #FFF
				opacity 0
			&:hover
				border-color #d8d8d8
				.overlay
					opacity 1
				img
					-webkit-filter blur(2px)
					filter blur(2px)
			img
				width 100%
				height 15em
			.postSubTitle, .postTitle, .postContent, .postDetail
				padding .3em 0
				font-size .8em
				font-weight bold
				color #9E9E9E
				text-align left
			.postTitle
				padding .15em 0
				font-size 1.25em
				color #000
			.postContent
				font-size .9em
				font-weight normal
				color #9E9E9E
			.postDetail
				text-align left
				font-size .9em
				span
					font-family 'Noto Sans Korean', 'Nanum Barun Gothic', sans-serif
					font-weight 500
					padding 0 .5em 0 .25em
	.userInfo
		width 20%
		height 100%
		padding 1em
		margin 2em auto
		display inline-block
		vertical-align top
		-webkit-animation-name fadeIn
		-webkit-animation-duration 2s
		animation-name fadeIn
		animation-duration 2s
		img
			width 15em
			height 15em
			border-radius 100%
		h2
			font-size 1.5em
			font-weight 900
			margin .5em
		p
			font-size 1em
			margin 0 .5em
			text-align left
@media (max-width: 1600px)
	#postsWrapper
		.postList
			.postInfo
				width 25%
		.userInfo
			width 15em
@media (max-width: 1366px)
	#postsWrapper
		.postList
			width 68%
			padding 1em 0
			.postInfo
				width 38%
@media (max-width: 1152px)
	#postsWrapper
		.postList
			.postInfo
				img
					height 12.5em
		.userInfo
			img
				width 12.5em
				height 12.5em
@media (max-width: 900px), (max-device-width: 900px)
	#postsWrapper
		.postList .userList
			-webkit-animation-name fadeIn
			-webkit-animation-duration 2s
			animation-name fadeIn
			animation-duration 2s
		.postList
			width 100%
			padding 0
			.postInfo
				width 100%
				padding 0
				margin 0
				border 0
				img
					height 50%
				.postSubTitle, .postTitle, .postContent, .postDetail
					padding .4rem .75rem
				.postTitle, .postContent
					padding 0 .75rem
		.userInfo
			width 100%
			padding 0
			p
				text-align center
